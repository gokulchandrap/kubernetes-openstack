$IP=$(/sbin/ifconfig eth0 | grep 'inet addr:' | cut -d: -f2 | awk '{ print $1}')


ETCD_OPTS="--name kubernetes --data-dir /var/lib/etcd --snapshot-count 1000 --listen-peer-urls http://$IP:7001,http://127.0.0.1:7001 --listen-client-urls http://$IP:4001,http://127.0.0.1:4001 --initial-advertise-peer-urls http://$IP:7001 --initial-cluster-state new --initial-cluster-token new-token --initial-cluster kubernetes=http://$IP:7001 --advertise-client-urls http://$IP:4001,http://127.0.0.1:4001"
